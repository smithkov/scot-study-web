<title>Scot-study search for universities in Scotland | Search-Universities-in-Scotland</title>
<script src="https://code.jquery.com/jquery-3.3.1.js" type="text/javascript"></script>

<!-- bread-crumb start here -->
<div class="bread-crumb">
	<img src="/main_theme/images/banner-top.jpg" class="img-responsive" alt="banner-top" title="banner-top">
	<div class="container">
		<div class="matter">
			<h2>ALL HIGHER INSTITUTIONS IN SCOTLAND</h2>
			<ul class="list-inline">
				<li>
					<a href="/">Home</a>
				</li>
				<li>
					<a href="#">Current Page</a>
				</li>
			</ul>
		</div>
	</div>
</div>
<!-- bread-crumb end here -->

<!-- coures start here -->
<div class="coures">
	<div class="container">
		<div class="row">
			<div class="col-lg-3 col-md-3 hidden-sm  hidden-xs">

				<div class="left">
					<h4>{{best}}</h4>
					<div class="popular">
						{{#each data }}
						<a href="/detail/{{this.Institution.name}}/{{this.name}}/{{this.id}}">
							<div class="box">
								<img style="height:150px" width="100%" src="/uploads/{{this.path}}"
									class="img-thumbnail" alt="img" title="img" />
								<p><strong>{{this.Institution.name}}</strong></p>
								<p>{{this.name}}</p>
								<span>{{this.fee}}</span>
							</div>
						</a>
						{{/each}}
						<hr>
						<h5 style="text-align: center;"><a href="/popular-Courses">View more ...</a></h5>
					</div>
				</div>
			</div>
			<div ng-controller="searchCtrl2" class="col-lg-9 col-md-9 col-sm-12 col-xs-12 mainpage">
				<div class="col-sm-12 sort">
					<h3 style="text-align:center">ALL HIGHER INSTITUTIONS IN SCOTLAND</h3>
				</div>
				<div class="row">
					<div class="schoolDiv">

						<table id="example" class="table table-striped table-bordered" style="width:100%">
							<thead>
								<tr>
									<th></th>
									<th>School</th>
									<th>City</th>
									<th>Courses </th>
								</tr>
							</thead>
							<tbody>
								{{#each schools}}
								<tr>
									<td>
										{{#if this.path}}
										<img class="img-circle" src="/uploads/{{this.path}}"
											style="height:50px; width:50px" />
										{{else}}
										<img class="img-circle" src="/noLogo.png" style="height:50px; width:50px" />
										{{/if}}
									</td>
									<td><a href="school-faculties/{{this.name}}/{{this.id}}">
											<h4>{{this.name}}</h4>
										</a></td>
									<td>
										<h4>{{this.City.name}}</h4>
									</td>
									<td><a href="school-faculties/{{this.name}}/{{this.id}}">
											<h4>View faculties</h4>
										</a></td>
								</tr>
								{{/each}}
							</tbody>
						</table>
					</div>

				</div>
			</div>
		</div>
	</div>
</div>

<script>
	$(document).ready(function () {

		$('#example').DataTable();
	});
</script>
<!-- coures end here -->