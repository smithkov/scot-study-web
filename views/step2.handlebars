<section class="content">
    <!-- Advanced Form Example With Validation -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>APPLICATION FORM</h2>
                    <ul class="nav nav-tabs tab-nav-right" role="tablist">
                        <li role="presentation"><a href="">Step One</a></li>
                        <li role="presentation" class="active"><a href="#" data-toggle="tab">Step Two</a></li>
                        <li role="presentation"><a href="#">Step Three</a></li>
                        <li role="presentation"><a href="#">Step Four</a></li>
                        <li role="presentation"><a href="#">Step Five</a></li>
                        <li role="presentation" class=""><a href="#" data-toggle="tab">Finish</a></li>
                    </ul>

                    <!-- Tab panes -->
                    <div class="tab-content"></div>
                </div>
                <div class="body">

                    <form action="/application/form2" method="POST">
                        <input type="hidden" name="view" value="{{app.view}}" />
                        <input type="hidden" name="step" value="step2" />
                        <input type="hidden" name="id" value="{{app.id}}" />
                        <div class="form-group form-float">
                            <label>Home Address *</label>
                            <div class="form-line">
                                <textarea name="homeAddress" cols="30" rows="3" placeholder="Home address"
                                    class="form-control no-resize">{{app.homeAddress}}</textarea>
                            </div>
                        </div>

                        <div class="form-group form-float">
                            <label>Postal address (if different from home address)</label>
                            <div class="form-line">
                                <textarea name="postalAddress" cols="30" rows="3" placeholder="Postal address"
                                    class="form-control no-resize">{{app.postalAddress}}</textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group form-float">
                                    <label>Telephone phone number*</label>
                                    <div class="input-group">
                                        <span class="input-group-addon">
                                            <i class="material-icons">phone_iphone</i>
                                        </span>
                                        <div class="form-line">
                                            <input type="number" name="phone" value="{{app.phone}}"
                                                class="form-control mobile-phone-number" placeholder="Mobile number"
                                                required>
                                        </div>
                                    </div>
                                    <!-- <input name="phone" value="{{app.phone}}" class="form-control mobile-phone-number" placeholder="telephone number" type="text" required> -->
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-4">
                                <div class="form-group form-float">
                                    <label>Contact email (change if different)</label>
                                    <div class="form-line">
                                        <input type="email" required name="contactEmail" value="{{app.contactEmail}}"
                                            class="form-control" required>
                                    </div>
                                    <!-- <input name=" phone" value="{{app.phone}}" class="form-control mobile-phone-number"
                                    placeholder="telephone number" type="text" required> -->
                                </div>
                            </div>
                        </div>

                        <a href="/application/step1" type="button" class="btn bg-orange waves-effect">
                            <i class="material-icons">arrow_back</i> <span class="icon-name">back</span>
                        </a>
                        <button type="submit" class="btn pull-right bg-primary waves-effect">
                            <i class="material-icons">arrow_forward</i> <span class="icon-name">Save and
                                continue</span>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <!-- #END# Advanced Form Example With Validation -->
</section>
